  <script>
    function addProject() {
      const projectTitles = ['Blog Platform', 'Weather App', 'Chat App', 'Game Project'];
      const descriptions = [
        'A blogging platform using full-stack technologies.',
        'App showing live weather data via API.',
        'A real-time chat app using WebSocket.',
        'A fun web-based game built with JavaScript.'
      ];

      const i = Math.floor(Math.random() * projectTitles.length);

      const div = document.createElement('div');
      div.className = 'project';
      div.innerHTML = `<h3>${projectTitles[i]}</h3><p>${descriptions[i]}</p>`;

      document.getElementById('projects').appendChild(div);
    }
  </script>
